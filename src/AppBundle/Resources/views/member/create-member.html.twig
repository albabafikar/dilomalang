{% extends 'subLayout.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header bg-red">
                        <h2>
                            <center>Input Data Pengunjung</center>
                        </h2>
                    </div>
                    <div class="body">
                        <form method="post">
                             <div class="form-group">
                                <p>Tanggal Kehadiran</p>
                                <div class="form-line">
                                    <input type="text" name="member_date" id="" class="datepicker form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Nama Startup / Instansi / Member</p>
                                <div class="form-line">
                                    <input type="text" name="member_name" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Aktivitas yang dilakukan</p>
                                <div class="form-line">
                                    <input type="text" name="member_activity" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Jumlah Pengunjung</p>
                                <div class="form-line">
                                    <input type="text" name="member_total" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Jenis Kelamin</p>
                                <select name="member_genre" id="" class="form-control">
                                    <option value="">-- Pilih Jenis Kelamin --</option>
                                    <option value="1">Laki-laki</option>
                                    <option value="2">Perempuan</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <p>Pilih Status</p>
                                <select name="member_status" id="" class="form-control">
                                    <option value="">-- Pilih Status Member --</option>
                                    <option value="1">Pelajar / Mahasiswa</option>
                                    <option value="2">Umum</option>
                                    <option value="3">Wiraswasta</option>
                                    <option value="4">Pegawai Swasta</option>
                                    <option value="5">Pegawai Negeri</option>
                                    
                                </select>
                            </div>
                            <div class="form-group">
                                <p>Email</p>
                                <div class="form-line">
                                    <input type="email" name="member_email" id="" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>No. Handphone</p>
                                <div class="form-line">
                                    <input type="numeric" name="member_phone" id="" class="form-control">
                                </div>
                            </div>
                            <button class="btn btn-primary waves-effect">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block customJS %}
    <script>
        $('.datepicker').bootstrapMaterialDatePicker({
            time: false
        });
    </script>
{% endblock %}