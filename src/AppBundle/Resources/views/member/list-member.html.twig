{% extends 'subLayout.html.twig' %}

{% block title %}Member{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            <center>Daftar Semua Member</center>
                        </h2>
                    </div>
                    <div class="body">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Tanggal</th>
                                    <th>Nama</th>
                                    <th>Jumlah Orang</th>
                                    <th>Email</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% if data|length > 0 %}
                               {% set i = 1 %}
                                {% for dat in data %}
                                    <tr>
                                        <td>{{ i }}</td>
                                        <td>{% if dat.memberDate is defined and not null %}{{ dat.memberDate|date('d m Y') }}{% endif %}</td>
                                        <td>{% if dat.memberName is defined and not null %}{{ dat.memberName }}{% endif %}</td>
                                        <td>{% if dat.memberTotal is defined and not null %}{{ dat.memberTotal }}{% endif %}</td>
                                        <td>{% if dat.memberEmail is defined and not null %}{{ dat.memberEmail }}{% endif %}</td>
                                        <td>
                                            <a href="{{ path('app_member_update',{id: dat.id}) }}" class="btn btn-primary btn-xs">UPDATE</a>
                                            <a href="{{ path('app_member_delete',{id: dat.id}) }}" class="btn btn-danger btn-xs">DELETE</a>
                                        </td>
                                    </tr>
                                    {% set i = i + 1 %}
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="5">Tidak ada data</td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block customJS %}
    <script>
        $('.dataTable').dataTable({

        });
    </script>
{% endblock %}