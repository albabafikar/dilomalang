{% extends 'subLayout.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            <center>Input Data Member</center>
                        </h2>
                    </div>
                    <div class="body">
                        <form method="post">
                            <div class="form-group">
                                <p>Nama Member</p>
                                <div class="form-line">
                                    <input type="text" name="member_name" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Aktivitas Member</p>
                                <div class="form-line">
                                    <input type="text" name="member_activity" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Jumlah Member</p>
                                <div class="form-line">
                                    <input type="text" name="member_total" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Jenis Kelamin</p>
                                <select name="member_genre" id="" class="form-control">
                                    <option value="">-- Pilih Jenis Kelamin --</option>
                                    <option value="1">Laki-laki</option>
                                    <option value="2">Perempuan</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <p>Pilih Status</p>
                                <select name="member_status" id="" class="form-control">
                                    <option value="">-- Pilih Status Member --</option>
                                    <option value="1">Mahasiswa</option>
                                    <option value="2">Umum</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <p>Member Date</p>
                                <div class="form-line">
                                    <input type="text" name="member_date" id="" class="datepicker form-control">
                                </div>
                            </div>
                            <button class="btn btn-primary waves-effect">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block customJS %}
    <script>
        $('.datepicker').bootstrapMaterialDatePicker({
            time: false
        });
    </script>
{% endblock %}