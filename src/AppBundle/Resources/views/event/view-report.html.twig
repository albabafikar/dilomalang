{% extends 'subLayout.html.twig' %}
{% block title %}
Laporan Kegiatan DILo Malang
{% endblock %}
{% block content %}         
<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="body">

            <img src="http://malangfrontend.github.io/who-are-we/img/dilo-logo-default.png" class="print-only" width="20%"/>
        
            <h3>
     {% if report.reportCategory is defined and not null %}
        {% if report.reportCategory == 1 %}
            Workshop Teknis
        {% elseif report.reportCategory == 2 %}
            Workshop Desain
        {% elseif report.reportCategory == 3 %}
            Workshop Manajemen
        {% elseif report.reportCategory == 4 %}
            Business Gathering
        {% elseif report.reportCategory == 5 %}
            Kompetisi Lokal
        {% else %}
            DILo on Campus
        {% endif %}
     {% endif %}
                                          
    </h3> 
    <h3>{{ report.reportTitle }}</h3>

<div class="body">
<button class="no-print" type="button" onclick="print('printed-area')" class="btn btn-primary btn-xs" style="position:absolute;right:30px;border-radius: 0;"> CETAK</button>
    
                <div id="printed-area">
                       <table class="table table no-border table-striped table-hover dataTable js-exportable">
                            <thead>
                            <tr>
                                <th width="200">&nbsp;</th> {# Label #}
                                <th width="10">&nbsp;</th> {# TitikDua #}
                                <th width="">&nbsp;</th> {# Label #}
                                <th width="10">&nbsp;</th> {# TitikDua #}
                                <th width="200">&nbsp;</th> {# IsiAlamat #}

                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td class="fw-bold">Tanggal Event</td>
                                <td colspan="6"> : &nbsp;  {% if report.reportDate is defined and not null %}{{ report.reportDate|date('j F Y') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Nama Narasumber </td>
                                <td colspan="6"> : &nbsp; {% if report.reportMentor is defined %}{{ report.reportMentor }}{% else %}-{% endif %}</td>
                            </tr> 
                            <tr>
                                <td class="fw-bold">Topik Pembahasan </td>
                                <td colspan="6"> : &nbsp; {% if report.reportTopic is defined %}{{ report.reportTopic }}{% else %}-{% endif %}</td>
                            </tr> 
                            <tr>
                                <td class="fw-bold">Waktu Pelaksanan </td>
                                <td colspan="6"> : &nbsp; {% if report.reportTime is defined %}{{ report.reportTime }}{% else %}-{% endif %}</td>
                            </tr> 
                            <tr>
                                <td class="fw-bold">Peserta </td>
                                <td colspan="6"> : &nbsp; {% if report.reportMember is defined %}{{ report.reportMember }}{% else %}-{% endif %}</td>
                            </tr> 
                            <tr>
                                <td class="fw-bold">Detail Kegiatan </td>
                                <td colspan="6"> : &nbsp; {% if report.reportDetail is defined %}{{ report.reportDetail }}{% else %}-{% endif %}</td>
                            </tr> 
                             <tr>
                                <td class="fw-bold">Foto Kegiatan </td>
                                </br> 
                                <td colspan="6"> : &nbsp; {% if report.reportPhoto is defined %} <img src="{{ asset('uploads') }}/images/report/{{ report.reportPhoto }}" alt="" width="400px"> {% else %}-{% endif %}</td>
                            </tr> 
                             

                            </tbody>
                        </table>
                    </div>
</div>
                
        </div>
    </div>
</div>

    </div>
</div>
     

                   
{% endblock %}