{% extends 'subLayout.html.twig' %}

{% block title %}
User Management DILo Malang
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header bg-green">
                    <img src="http://malangfrontend.github.io/who-are-we/img/dilo-logo-default.png" class="print-only" width="20%"/>
                        <h2>
                            <center> <strong> Daftar User Aplikasi DILo Malang </strong> </center>
                        </h2>
                    </div>
                    <div class="body">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Nama User</th>
                                    <th>Job Desk</th>
                                    <th>Status</th>
                                    <th class="no-print">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% if data|length > 0 %}
                               {% set i = 1 %}
                                {% for dat in data %}
                                    <tr>
                                        <td>{{ i }}</td>
                                        <td>{% if dat.Username is defined and not null %}{{ dat.Username }}{% endif %}</td>

                                        <td>
                                            {% if dat.Jobdesk is defined and not null %}
                                                {% if dat.Jobdesk == 1 %}
                                                    <span class="label label-success">Manager</span>
                                                {% elseif dat.Jobdesk == 2 %}
                                                    <span class="label label-success">Operasional</span>
                                                {% elseif dat.Jobdesk == 3 %}
                                                    <span class="label label-success">Public Relation</span>
                                                {% elseif dat.Jobdesk == 4 %}
                                                    <span class="label label-success">Admin</span>
                                                {% elseif dat.Jobdesk == 5 %}
                                                    <span class="label label-success">Customer Service</span>

                                                {% endif %}
                                            {% endif %}
                                        </td>

                                        <td>
                                            {% if dat.Status is defined and not null %}
                                                {% if dat.Status == 1 %}
                                                    <span class="label label-success">Tervalidasi</span>
                                                {% elseif dat.Status == 2 %}
                                                    <span class="label label-success">Menunggu Validasi</span>

                                                {% endif %}
                                            {% endif %}
                                        </td>
                                        <td class="no-print">
                                            <a href="#" class="btn btn-primary btn-xs">VALIDATE</a>
                                            <a href="#" class="btn btn-danger btn-xs">DELETE</a>
                                        </td>
                                    </tr>
                                    {% set i = i + 1 %}
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="5">Tidak ada data</td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>
                        

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block customJS %}
    <script>
        $('.dataTable').dataTable({

        });
    </script>
{% endblock %}