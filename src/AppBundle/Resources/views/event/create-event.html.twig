{% extends 'subLayout.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            <center>Input Event</center>
                        </h2>
                    </div>
                    <div class="body">
                        <form method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <p>Nama Event</p>
                                <div class="form-line">
                                    <input type="text" name="event_name" id="" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Tanggal Event</p>
                                <div class="form-line">
                                    <input type="text" name="event_date" id="" class="datepicker form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Topic Event</p>
                                <div class="form-line">
                                    <textarea name="event_topic" class="form-control" id="" cols="30" rows="10"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Nama Mentor</p>
                                <div class="form-line">
                                    <input type="text" name="event_mentor" id="" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Pekerjaan Mentor Event</p>
                                <div class="form-line">
                                    <input type="text" name="mentor_job" id="" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Waktu Event</p>
                                <div class="form-line">
                                    <input type="text" name="event_time" id="" class="timepicker form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Event Participant</p>
                                <div class="form-line">
                                    <input type="text" name="event_participant" id="" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Detail Event</p>
                                <div class="form-line">
                                    <textarea name="event_detail" class="form-control" id="" cols="30" rows="10"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Event Price</p>
                                <div class="form-line">
                                    <input type="text" name="event_price" id="" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Masukkan Foto Event</p>
                                <input type="file" accept="image/*" name="event_photo" id="" class="form-control">
                            </div>
                            <button class="btn btn-primary waves-effect">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block customJS %}
    <script>
        $('.datepicker').bootstrapMaterialDatePicker({
            time: false
        });

        $('.timepicker').bootstrapMaterialDatePicker({
           date: false
        });
    </script>
{% endblock %}