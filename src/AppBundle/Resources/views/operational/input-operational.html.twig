{% extends 'subLayout.html.twig' %}

{% block title %}Pengajuan Operasional{% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header bg-yellow">
                        <h2>
                            <center>Input Pengajuan Operasional</center>
                        </h2>
                    </div>
                    <div class="body">
                        <form method="post">
                            <div class="form-group">
                                <p>Kategori</p>
                                <div class="form-line">
                                    <select name="operational_category" id="" class="form-control">
                                    <option value="">-- Pilih Kategori--</option>
                                    <option value="1">Operasional</option>
                                    <option value="2">Kegiatan</option>
                                    <option value="3">Gaji</option>
                                    <option value="4">Pengadaan ATK</option>
                                    <option value="5">Refreshment</option>
                                   
                                </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Bulan Pengajuan</p>
                                <div class="form-line">
                                    <select name="operational_month" id="" class="form-control">
                                    <option value="">-- Pilih Bulan--</option>
                                    <option value="1">Januari</option>
                                    <option value="2">Februari</option>
                                    <option value="3">Maret</option>
                                    <option value="4">April</option>
                                    <option value="5">Mei</option>
                                    <option value="6">Juni</option>
                                    <option value="7">Juli</option>
                                    <option value="8">Agustus</option>
                                    <option value="9">September</option>
                                    <option value="10">Oktober</option>
                                    <option value="11">November</option>
                                    <option value="12">Desember</option>
                                </select>
                                </div>
                            </div>
                             <div class="form-group">
                                <p>Tahun Pengajuan</p>
                                <div class="form-line">
                                    <select name="operational_year" id="" class="form-control">
                                    <option value="">-- Pilih Tahun--</option>
                                    <option value="1">2017</option>
                                    <option value="2">2018</option>
                                    <option value="3">2019</option>
                                    <option value="4">2020</option>
                                    <option value="5">2021</option>
                                    <option value="6">2022</option>
                                    <option value="7">2023</option>
                                    <option value="8">2024</option>
                                    <option value="9">2025</option>
                                    <option value="10">...</option>
                                </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Nama Pengajuan</p>
                                <div class="form-line">
                                    <input type="text" name="operational_name" class="form-control">
                                </div>
                            </div>
                          
                            
                            <div class="form-group">
                                <p>Kuantitas (QTY)</p>
                                <div class="form-line">
                                    <input type="text" name="operational_qty" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Harga Satuan (Rp)</p>
                                <div class="form-line">
                                    <input type="text" name="operational_unitprice" class="form-control">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <p>Jumlah Pengajuan</p>
                                <div class="form-line">
                                    <input type="numeric" name="operational_total" id="" class="form-control">
                                </div>
                            </div>
                            
                            <!--div class="form-group">
                                <p>Pilih Status</p>
                                <select name="member_status" id="" class="form-control">
                                    <option value="">-- Pilih Status Member --</option>
                                    <option value="1">Mahasiswa</option>
                                    <option value="2">Umum</option>
                                </select>
                            </div-->
                            <!--div class="form-group">
                                <p>Member Date</p>
                                <div class="form-line">
                                    <input type="text" name="member_date" id="" class="datepicker form-control">
                                </div>
                            </div-->
                            <button class="btn btn-primary waves-effect">SUBMIT PENGAJUAN</button>
                            <button type="button" onclick="print('card')" class="btn btn-primary waves-effect" style="position:absolute;right:30px;border-radius: 0;">CETAK</button>
                   </br>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block customJS %}
    <script>
        $('.datepicker').bootstrapMaterialDatePicker({
            time: false
        });
    </script>
{% endblock %}