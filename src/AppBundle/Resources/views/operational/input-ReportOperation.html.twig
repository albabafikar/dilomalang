{% extends 'subLayout.html.twig' %}
{% block title %}Laporan Operasional{% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header bg-orange">
                        <h2>
                            <center>Input Laporan Operasional</center>
                        </h2>
                    </div>
                    <div class="body">
                        <form method="post" enctype="multipart/form-data">
                           <div class="form-group">
                                <p>Kategori</p>
                                <select name="ro_status" id="" class="form-control">
                                    <option value="">-- Pilih Kategori --</option>
                                    <option value="1">Operasional</option>
                                    <option value="2">Kegiatan</option>
                                    <option value="3">Gaji</option>
                                    <option value="4">Pengadaan ATK</option>
                                    <option value="5">Refreshment</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <p>Item</p>
                                <div class="form-line">
                                    <input type="text" name="ro_name" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Bulan Pelaksanaan</p>
                                <div class="form-line">
                                    <select name="ro_month" id="" class="form-control">
                                    <option value="">-- Pilih Bulan--</option>
                                    <option value="1">Januari</option>
                                    <option value="2">Februari</option>
                                    <option value="3">Maret</option>
                                    <option value="4">April</option>
                                    <option value="5">Mei</option>
                                    <option value="6">Juni</option>
                                    <option value="7">Juli</option>
                                    <option value="8">Agustus</option>
                                    <option value="9">September</option>
                                    <option value="10">Oktober</option>
                                    <option value="11">November</option>
                                    <option value="12">Desember</option>
                                </select>
                                </div>
                            </div>
                             <div class="form-group">
                                <p>Tahun Pelaksanaan</p>
                                <div class="form-line">
                                    <select name="ro_year" id="" class="form-control">
                                    <option value="">-- Pilih Tahun--</option>
                                    <option value="1">2017</option>
                                    <option value="2">2018</option>
                                    <option value="3">2019</option>
                                    <option value="4">2020</option>
                                    <option value="5">2021</option>
                                    <option value="6">2022</option>
                                    <option value="7">2023</option>
                                    <option value="8">2024</option>
                                    <option value="9">2025</option>
                                    <option value="10">...</option>
                                </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Kuantitas (QTY)</p>
                                <div class="form-line">
                                    <input type="text" name="ro_qty" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Harga Satuan (Rp)</p>
                                <div class="form-line">
                                    <input type="text" name="ro_unitprice" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <p>Harga Total (Rp)</p>
                                <div class="form-line">
                                    <input type="text" name="ro_total" class="form-control">
                                </div>
                            </div>
                          
                            <div class="form-group">
                                <p>Tanggal Nota</p>
                                <div class="form-line">
                                    <input type="text" name="ro_date" id="" class="datepicker form-control">
                                </div>
                            </div>

                             <div class="form-group">
                                <p>Bukti Nota</p>
                                <input type="file" accept="image/*" name="ro_note" id="" class="form-control">
                            </div>


                            <button class="btn btn-primary waves-effect">SUBMIT LAPORAN</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block customJS %}
    <script>
        $('.datepicker').bootstrapMaterialDatePicker({
            time: false
        });
    </script>
{% endblock %}